<%- if bundler? -%>
require 'jeweler'
Jeweler::Tasks.new(Gem::Specification.load('<%= @name %>.gemspec'))
<%- else -%>
begin
  gem 'jeweler', '<%= @development_dependencies['jeweler'] %>'
  require 'jeweler'

  Jeweler::Tasks.new(Gem::Specification.load('<%= @name %>.gemspec'))
rescue LoadError
  warn 'Jeweler (or a dependency) not available. Install it with: gem install jeweler'
end
<%- end -%>
